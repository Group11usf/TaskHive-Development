
<head>
  <title>TaskHive</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
<body>
  <header>
    <h1>TaskHive</h1> 
  </header>
    <nav>
      <ul>
        <% if authenticated? %>
          <li><%= link_to 'Home', root_path %></li>
          <li><%= link_to 'Dashboard', dashboard_path %></li>
          <li><%= link_to 'Calendar', calendar_path %></li>
          <li><%= link_to 'Log Out', login_path,  method: :delete if authenticated? %></li>
          <% end %>
      </ul>
    </nav>

  <div class="container">
  <%= link_to 'â† Back to Calendar', calendar_path, class: 'back-link' %>
  
  <h1 class="date-header">
    <%= Date.parse(@date).strftime('%A %B, ') %>
    <%= Date.parse(@date).day.ordinalize %> 
    <%= Date.parse(@date).strftime('%Y') %>
  </h1>
  
  <div class="tasks-container">
    <h2 class="tasks-title">Tasks for this day</h2>
    
    <% if @tasks.any? %>
      <div class="task-list">
        <% @tasks.each do |task| %>
          <div class="task-card">
            <div class="task-content">
              <h3 class="task-title <%= 'finished' if task.date_finished.present? %>">
                <%= task.title %> - <%= task.task_status %>
              </h3>
              <% if task.link.present? %>
                <p class="task-link">
                  <%= link_to task.link, 
                  task.link.start_with?('http') ? task.link : "https://#{task.link}", 
                  target: "_blank", 
                  rel: "noopener noreferrer" %>
                </p>
              <% end %>
            </div>
            <div class="task-actions">
               <%= button_to task_edit_path(task.due_date, task.id), 
                     title: "Edit Task", 
                     method: :get, 
                     class: "fa fa-pencil fa-2x custom-button edit-task-btn" do %>
               <% end %>

              <%= button_to task_path(task), method: :delete, 
                    class: "fa fa-trash-o fa-2x custom-button delete-task-btn",
                    data: { confirm: "Delete this task?" },
                    title: "Delete task" do %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="no-tasks">No tasks for this day</p>
    <% end %>
  </div>

  <div class="add-task-section">
    <h2>Add New Task</h2>
    <%= form_with model: @task, url: tasks_path, data: { turbo: false } do |f| %>
      <%= f.hidden_field :due_date, value: @date %>

      <div class="form-field">
        <%= f.label :title, "Task Title" %>
        <%= f.text_field :title, placeholder: "Enter task title", required: true %>
      </div>
      
      <div class="form-field">
         <%= f.label :task_status, "Task Status" %>
         <%= f.select :task_status, 
             ['Not Started', 'Working', 'Completed'],
             { prompt: "Select task status" },
             { class: "form-select"}
         %>
       </div>

      <div class="form-field">
        <%= f.label :link, "Task Link (optional)" %>
        <%= f.text_field :link, placeholder: "https://example.com" %>
      </div>
      
      <%= f.submit "Add Task", class: "submit-btn" %>
    <% end %>
  </div>
</div>


<footer>
  <p>&copy; 2025 TaskHive. All rights reserved.</p>
</footer>