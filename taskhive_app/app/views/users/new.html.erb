<h2>Create Account</h2>
<% if @user.errors.any? %>
  <div style="color: red;">
    <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @user, local: true do |f| %>
  <div>
    <%= f.label :email_address, "Email Address" %><br>
    <%= f.text_field :email_address, required: true, placeholder: "Enter your email" %>
  </div>
  <div>
    <%= f.label :password, "Password" %><br>
    <%= f.password_field :password, required: true, placeholder: "Enter your password" %>
  </div>
  <div>
    <%= f.label :password_confirmation, "Confirm Password" %><br>
    <%= f.password_field :password_confirmation, required: true, placeholder: "Confirm your password" %>
  </div>
  <div>
    <%= f.submit "Register" %>
  </div>
<% end %>
